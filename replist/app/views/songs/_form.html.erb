<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist %><br>
    <%= f.collection_select(:artist_id, Artist.all, :id, :name, prompt: true) %>
  </div>
  <div class="field">
    <%= f.label :instrument %><br>
    <%= f.select(:instrument, options_for_select([['Guitar', "Guitar"], ['Piano', "Piano"], ['Bass', "Bass"]], @song.instrument)) %>
  </div>
  <div class="field">
    <%= f.label :key %><br>
    <%= f.text_field :key %>
  </div>
  <div class="field">
    <%= f.label :high_note %><br>
    <%= f.text_field :high_note %>
  </div>
  <div class="field">
    <%= f.label :lyrics %><br>
    <%= f.text_area :lyrics %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select(:status, options_for_select([["Future"], ["In Progress"], ["Learned"], ["Memorized"]], @song.status)) %>
  </div>
  <div class="field">
    <%= f.label :performed_on %><br>
    <%= f.date_select :performed_on %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
